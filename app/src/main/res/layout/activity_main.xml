<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/colorBackground"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:clipToPadding="false">

        <!-- Header -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textSize="32sp"
            android:textStyle="bold"
            android:layout_marginBottom="24dp"
            android:layout_marginStart="8dp" />

        <!-- 状态卡片 -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            style="?attr/materialCardViewFilledStyle">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/status_title"
                    android:textAppearance="?attr/textAppearanceTitleMedium"
                    android:layout_marginBottom="16dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <View
                        android:id="@+id/statusIndicator"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:background="@drawable/ic_launcher_background"
                        android:backgroundTint="@android:color/darker_gray"
                        android:layout_marginEnd="12dp"/>

                    <TextView
                        android:id="@+id/tvStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/status_stopped"
                        android:textAppearance="?attr/textAppearanceBodyLarge" />
                </LinearLayout>

                <Button
                    android:id="@+id/btnToggleService"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/action_start" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- 模式卡片 -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            style="?attr/materialCardViewFilledStyle">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/mode_title"
                    android:textAppearance="?attr/textAppearanceTitleMedium"
                    android:layout_marginBottom="8dp"/>

                <RadioGroup
                    android:id="@+id/rgMode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/rbShizuku"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/mode_shizuku" />

                    <RadioButton
                        android:id="@+id/rbAccessibility"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/mode_accessibility" />
                </RadioGroup>

                <TextView
                    android:id="@+id/tvModeDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="16dp"
                    android:text="@string/desc_shizuku"
                    android:textAppearance="?attr/textAppearanceBodyMedium"
                    android:textColor="?android:attr/textColorSecondary"/>

                <Button
                    android:id="@+id/btnModeAction"
                    style="?attr/materialButtonOutlinedStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/action_authorize_shizuku"
                    android:layout_gravity="end"/>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- 设置卡片 -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            style="?attr/materialCardViewFilledStyle">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/settings_title"
                    android:textAppearance="?attr/textAppearanceTitleMedium"
                    android:layout_marginBottom="16dp"/>

                <TextView
                    android:id="@+id/tvSensitivity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="灵敏度: 1.0"
                    android:textAppearance="?attr/textAppearanceBodyMedium" />

                <SeekBar
                    android:id="@+id/sbSensitivity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:max="20"
                    android:progress="0" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- 调试卡片 -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            style="?attr/materialCardViewFilledStyle">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/debug_title"
                    android:textAppearance="?attr/textAppearanceTitleMedium"
                    android:layout_marginBottom="16dp"/>

                <Button
                    android:id="@+id/btnOpenDebug"
                    style="?attr/materialButtonOutlinedStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/action_debug" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
